<Window x:Name="loginScrn" x:Class="Coursework2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meal Sharers - Log In" Height="266.801" Width="351.414">
    <Grid>
        <Label x:Name="lblLogInTitle" Content="Welcome to Meal Sharers" HorizontalAlignment="Left" Margin="48,34,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>

        <Label x:Name="lblEmail" Content="Email:" HorizontalAlignment="Left" Margin="69,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxEmail" HorizontalAlignment="Left" Height="23" Margin="150,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Label x:Name="lblPsswrd" Content="Password:" HorizontalAlignment="Left" Margin="69,121,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="150,124,0,0" VerticalAlignment="Top" Height="23" Width="120"/>

        <Button x:Name="btnLogIn" Content="Log In" HorizontalAlignment="Left" Margin="69,182,0,0" VerticalAlignment="Top" Width="75" Click="btnLogIn_Click"/>
        <Button x:Name="btnSignUp" Content="Sign Up" HorizontalAlignment="Left" Margin="195,182,0,0" VerticalAlignment="Top" Width="75" Click="btnSignUp_Click"/>

    </Grid>
</Window>
