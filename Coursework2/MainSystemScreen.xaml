        <Label x:Name="lblPVGStat" Content="" HorizontalAlignment="Left" Margin="169,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.43,0.5"/>
        <Label x:Name="lblCertStat" Content="" HorizontalAlignment="Left" Margin="169,235,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.43,0.5"/>
        <ListView x:Name="lstviewEaters" HorizontalAlignment="Left" Height="100" Margin="184,91,0,0" VerticalAlignment="Top" Width="185" SelectionChanged="lstviewEaters_SelectionChanged"></ListView>
        
        <Button x:Name="btnSlctEater" Content="Select Eater" HorizontalAlignment="Left" Margin="294,191,0,0" VerticalAlignment="Top" Width="75" Click="btnSlctEater_Click"/>

    </Grid>
</Window>
