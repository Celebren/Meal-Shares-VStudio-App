        <Button x:Name="btnLogOut" Content="Log Out" HorizontalAlignment="Left" Margin="335,13,0,0" VerticalAlignment="Top" Width="34" RenderTransformOrigin="0.982,0.485" Click="btnLogOut_Click" FontSize="8"/>
